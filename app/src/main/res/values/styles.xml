<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toobar_theme" parent="Theme.MaterialComponents.Light">

        <item name="android:textColorPrimary">@color/input_login</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="text_input" parent="Theme.MaterialComponents.Light">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="ExpenseSwitchTheme">
        <item name="colorControlActivated">@color/budget_green</item>
        <item name="colorSwitchThumbNormal">@color/budget_red</item>
    </style>
</resources>
